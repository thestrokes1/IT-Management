# IT Management Platform - Environment Variables Configuration
# Copy this file to .env and update the values for your environment

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key for production: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-in-production

# DEBUG MODE - Set to False in production!
DEBUG=True

# ALLOWED HOSTS - Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,*.pythonanywhere.com

# Database Configuration
# SQLite for development (default)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL for production (uncomment and configure)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Email Configuration
# For development (console backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production (SMTP configuration)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Security Configuration
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Cache Configuration
CACHE_TYPE=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=it-management-platform

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_COOKIE_AGE=86400

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760

# API Configuration
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_PER_HOUR=1000

# Backup Configuration
BACKUP_ENABLED=False
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
MONITORING_ENABLED=True
ERROR_REPORTING_ENABLED=True

# Third-party Service Keys (if needed)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# SENDGRID_API_KEY=your-sendgrid-api-key
# STRIPE_SECRET_KEY=your-stripe-secret-key

# Development/Production Environment
ENVIRONMENT=development

